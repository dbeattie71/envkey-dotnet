<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>EnvKey</id>
    <version>$version$</version>
    <title>EnvKey</title>
    <authors>Bernhard Millauer</authors>
    <owners>EnvKey</owners>
    <tags>envkey</tags>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <licenseUrl>https://github.com/envkey/envkey-dotnet/blob/master/LICENCE.txt</licenseUrl>
    <projectUrl>https://github.com/envkey/envkey-dotnet</projectUrl>
    <description>
      This package consists of dependencies to envkey sdk and contains the envkey binaries for the major supported platforms Windows64, Linux64 and Osx64.
      This package must be referenced in the executable project, otherwise the envkey binaries aren't copied to the output folder.
    </description>
    <dependencies>
      <group>
        <dependency id="EnvKey.Sdk" version="[$version$]" />

        <!-- Nope: nuget packages doesn't inherit copy-to-output files from other packages. We need to inlude them ourself. -->
        
        <!-- <dependency id="EnvKey.Platform.Windows64" version="[$version$]" /> -->
        <!-- <dependency id="EnvKey.Platform.Linux64" version="[$version$]" /> -->
        <!-- <dependency id="EnvKey.Platform.Osx64" version="[$version$]" /> -->
      </group>
    </dependencies>
    <contentFiles>
      <files include="any\any\envkey-fetch_win64.exe" buildAction="none" copyToOutput="true" flatten="true" />
      <files include="any\any\envkey-fetch_linux64" buildAction="none" copyToOutput="true" flatten="true" />
      <files include="any\any\envkey-fetch_darwin64" buildAction="none" copyToOutput="true" flatten="true" />
    </contentFiles>
  </metadata>
  <!--
  what the nuspec is actually doing is moving the contentFiles\any\any\envkey-fetch.exe to contentFiles\any\any\envkey-fetch.exe so 
  that the <contentFiles> node can pick the file from any\any\envkey-fetch.exe (without contentFiles). This is very confusing but works...
  -->
  <files>
    <file src="contentFiles\win64\envkey-fetch.exe" target="contentFiles\any\any\envkey-fetch_win64.exe" />
    <file src="contentFiles\linux64\envkey-fetch" target="contentFiles\any\any\envkey-fetch_linux64" />
    <file src="contentFiles\darwin64\envkey-fetch" target="contentFiles\any\any\envkey-fetch_darwin64" />
  </files>
</package>